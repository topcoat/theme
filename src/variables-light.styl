/* This file should include color and image variables corresponding to the light theme */
var-background-color = #e5e9e8
var-background--body = #DFE2E2
var-background-color--down = #d3d7d7
var-background-color--hover = #EDF1F1
var-border = 1px solid #a5a8a8
var-box-shadow = inset 0 1px #fff
var-box-shadow--down = inset 0 1px rgba(0, 0, 0, 0.12)
var-color = #454545
var-text-shadow = 0 1px #fff
var-background-color--input = #d3d7d7
/* Call To Action */
var-background-color--cta--down = #0380e8
var-background-color--cta--hover = #509BEF
/* Icons */
var-menu-stack-icon = url("../img/hamburger_dark.svg")
/* Navigation Bar */
var-color--navigation-bar = #000
var-box-shadow--navigation-bar = inset 0 -1px #b9bcbc, 0 1px #d4d6d6
/* Text Input */
var-color--placeholder = #C6C8C8
var-color--focus = #000
var-background-color--text-input = var-background-color--down
var-background-color--text-input--focus = var-background-color--hover
/* List */
var-background-color--list = rgb(223, 226, 226)
var-border-top--list-container = 1px solid rgb(188, 191, 191)
var-border-top--list = 1px solid rgb(188, 191, 191)
var-border-bottom--list = 1px solid rgb(239, 241, 241)
var-border-top--list-item--first = 1px solid rgba(0, 0, 0, 0.05)
var-border-top--list-item = 1px solid rgb(239, 241, 241)
var-border-bottom--list-item = 1px solid rgb(188, 191, 191)
var-color--list-header = rgb(101, 101, 101)
var-text-shadow--list-header = 0 1px 0 rgba(255, 255, 255, 0.5)
var-border-top--list-header = 1px solid rgba(255, 255, 255, 0.5)
var-border-bottom--list-header = 1px solid rgba(255, 255, 255, 0.23)
var-background-color--list-header = rgb(204, 207, 207)
/* Overlay */
var-modal-bg-color = #e5e9e8
var-overlay__header-border = 1px solid #d3d7d7
/* Progress bar */
var-bar-bg-color = var-background-color--down
var-progress-bg-color = #e0f0fa
/* Checkbox */
var-border--checkmark = 7px solid #666666
/* Range input */
var-range-background = var-background-color--down
var-range__slider-border = 1px solid rgba(0, 0, 0, .36)
var-range__slider-background = url("../img/light-grips.png") center center no-repeat #e5e9e8
var-range__slider-bg-size    = 7px 18px
var-range__slider-box-shadow = inset 0 1px 0 rgba(255, 255, 255, .12);
/* Radio Button */
var-border--radio-button = 1px solid rgba(0,0,0,0.1)
var-background--radio-button = #666666
var-box-shadow--radio-button = 0 1px rgba(255,255,255,0.50)
/* Tab bar */
var-color--tab-bar--active = #0083e8
var-background-color--tab-bar--active = #e0f0fa
var-box-shadow--tab-bar--active = inset 0 0 2px #c0ced8
/* Switch */
var-color--switch__label--left = #0083e8
var-background-color--switch__label--left = #e0f0fa
var-background-color--switch__label--right = #d3d7d7

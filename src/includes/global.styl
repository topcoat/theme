body {
	margin: 0;
	padding: 0;
	background: var-background--body;
	color: #000;
	font: 16px "Source Sans", helvetica, arial, sans-serif;
	font-weight: 200;
	text-rendering: optimizeLegibility;
}

:focus {
  outline-color: transparent;
  outline-style: none;
}

:disabled {
  opacity: 0.3;
  cursor: default;
  pointer-events: none;
}
